pipeline {
    // Use any available agent (Jenkins node) to run the pipeline
    agent any

    // Define environment variables for reuse throughout the pipeline
    environment {
        IMAGE_NAME = "my-app-image:latest"     // Docker image name and tag
        KUBE_MANIFEST_DIR = "kubernetes"       // Directory containing Kubernetes manifests
    }

    stages {

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    bat "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "Applying Kubernetes manifests..."
                    bat "kubectl apply -f ${KUBE_MANIFEST_DIR}\\"
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    echo "Checking rollout status..."
                    bat "kubectl rollout status deployment/flask-app"

                    echo "Verifying pods..."
                    bat "kubectl get pods -l app=flask-app"

                    echo "Verifying services..."
                    bat "kubectl get svc flask-app-service"
                }
            }
        }


    }

    // Post actions run after the stages, depending on success/failure
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Please check logs.'
        }
    }
}
